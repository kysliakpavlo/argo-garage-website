extends index

block scripts 
  meta(http-equiv='refresh' content='30')
  script(src='/js/review.js')
  script var db_id = #{renderRowID}

block dashboard
  #status  
    .inline 
      table
        tr
          th Key 
          th Tag
        tr
          td b 
          td Block
        tr
          td c  
          td Clear
        tr
          td f 
          td Filter
        tr
          td j 
          td Done      
    .inline
      img.boxbig(src=renderImageURL+'image/'+renderImageID, class=[renderOrientation0,renderVisual])
    .inline
      table
        tr
          th Attribute 
          th Value
        tr
          td ID 
          td #{renderRowID}
        tr
          td Blocked 
          td #{renderBlocked}
        tr
          td Filtered 
          td #{renderFiltered}
        tr
          td Hidden 
          td #{renderHidden}
        tr
          td Orientation 
          td #{renderOrientation}
        tr 
          td Icon 
          td
            img.boxicon(src=renderImageURL+'icon/'+renderImageID, class=renderOrientation0)
        tr 
          td Thumbnail 
          td
            img.boxthumb(src=renderImageURL+'thumb/'+renderImageID, class=renderOrientation0)
        tr 
          td Map 
          td
            img(src='https://maps.googleapis.com'+renderMap)
  #moderation 
    pre #{renderJSONdata}