block scripts
  script(src='/js/review.js')
  script var db_id = #{renderRowID}

block dashboard
  #status  
    .inline 
      table
        tr
          th Key 
          th Tag
        tr
          td b 
          td Block
        tr
          td c  
          td Clear
        tr
          td f 
          td Filter
        tr
          td u 
          td portraitUp
        tr
          td d 
          td portraitDown
        tr
          td r 
          td landscapeRight
        tr
          td l 
          td landscapeLeft
        tr
          td j 
          td Done      
    .inline
      img.boxbig(src=renderImageURL+'image/'+renderImageID, class=[renderOrientation0,renderVisual])
    .inline
      table
        tr
          th Attribute 
          th Value
        tr
          td ID 
          td #{renderRowID}
        tr
          td Blocked 
          td #{renderBlocked}
        tr
          td Filtered 
          td #{renderFiltered}
        tr
          td Hidden 
          td #{renderHidden}
        tr
          td Orientation 
          td #{renderOrientation}
        tr 
          td Icon 
          td
            img.boxicon(src=renderImageURL+'icon/'+renderImageID, class=[renderOrientation0])       
  #orientation
    P Thumbnail
    .inline
      p portraitUp
      p
        img.boxthumb(src=renderImageURL+'thumb/'+renderImageID)
    .inline
      p landscapeLeft
      p
        img.boxthumb(src=renderImageURL+'thumb/'+renderImageID, class="rotate90")
    .inline
      p portraitDown
      p
        img.boxthumb(src=renderImageURL+'thumb/'+renderImageID, class="rotate180")
    .inline
      p landscapeRight
      p
        img.boxthumb(src=renderImageURL+'thumb/'+renderImageID, class="rotate270")
  #moderation 
    pre #{renderJSONdata}